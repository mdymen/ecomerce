    <script type="text/javascript">
        $(function() {
            $('#subir').bind('click', function() {
               var valor = Number($('#quantidade').val());
               $('#quantidade').val(valor+Number(1));
            });

            $('#bajar').bind('click', function() {
               var valor = Number($('#quantidade').val());
               if (valor > 1) {
                $('#quantidade').val(valor-Number(1));
                }
            });
            
            $('#correio').bind('click', function() {
                $.post('correio',{CEP: $('#CEP').val()}, function(response) {
                   var prazo = response.Prazo.PrazoEntrega + " dia(s)";
                   var precoAux = (parseFloat(response.Preco.Valor)  - 10).toString();
                   var preco = 'R$ ' + precoAux.slice(0,4);
                   console.log(response.Preco.Valor);
                   if (response.Prazo.MsgErro.length !== 0) {
                       prazo = '<font color="red">'+response.Prazo.MsgErro+'</font>';
                   }
                   
                   if (response.Preco.MsgErro.length !== 0) {
                       preco = '<font color="red">'+response.Preco.MsgErro+'</font>';
                   }
        
                    $('#precofrete').html(preco);
                    $('#diasfrete').html(prazo);
                    console.log(response);
                });
            });

           $('#btnAdicionar').bind('click', function() {
                var idVenta = Math.floor((Math.random() * 10000) + 1);
                $.post("adicionar", {quantidade: $('#quantidade').val(), produto: $('#produto').val(), titulo: $('#titulo').html(), tamanho: $('#tamanho').val(), preco: $('#preco').html(), idVenta: idVenta }, function(response) {
                   
                   var html = "";
                   var total = Number(0);
                   var i = Number(0);
                   $.each(response, function(key, value) {
                        var id = (response[key].id);               
                        var titulo = (response[key].titulo);
                        var tamanho = response[key].tamanho;
                        var preco = response[key].preco;
                        var quantidade = response[key].quantidade;
                        
                        html = html + '<li><a href="'+$('#url').val()+'"><b>'+titulo+'</b><span>('+quantidade+') - '+tamanho+' R$' + preco + '</span></a></li>';
                        total = total + Number(preco);
                        i += Number(quantidade);
                   });
                    var urlCarro = $('#urlCarrinho').val();
                    console.log(response);
                    var tot = '<li class="divider"></li><li><a href="'+urlCarro+'">Total: R$ '+total+'</a></li>';
                    $('#carrinho').html(html+tot); 
                    $('#tituloCarrinho').html('Carrinho: '+i+' item(s)');
                    $('#carrinhoExito').css("display","inline");
               })
           }) 
        });
    
    </script>